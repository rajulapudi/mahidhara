<!DOCTYPE html>
<html lang="en">
<%- include('head'); -%>

<body>
    <%- include('header'); -%>
    <main id="main">
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2><%= product.displayName %> </h2>
                    <ol>
                        <li><a href="/">Home</a></li>
                        <li><a href="/products">Products</a></li>
                        <li><%= product.displayName %></li>
                    </ol>
                </div>

            </div>
        </section>

        <section>
            <div class="row justify-content-center">
                <img src="<%= product.image %>" alt="<%= product.displayName %> " width="300px" />
            </div>
            <h5 style="text-align: center; font-weight: bold;"><%= product.name %> </h5>
            <h6 style="text-align: center; font-weight: bold;"> CAS # <%= product.cas %></h6>
        </section>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="row justify-content-center">
                            <h6>
                                <span>
                                    Molecular Formula :
                                </span>
                                <span>
                                    <%= product.molformula %> 
                                </span>
                            </h6>
                        </div>
                        
                      
                    </div>
                    <div class="col">
                        <div class="row justify-content-center">
                            <h6>
                                <span>
                                    Molecular Wt :
                                </span>
                                <span>
                                    <%= product.molwt %> 
                                </span>
                            </h6>
                        </div>
                       
                    </div>
                    
                </div>
            </div>
            
        </section>
        <section>
            <div class="container" style="max-width: 900px;">
                <h6 style="font-weight: bolder; font-style: oblique; text-decoration: underline;">Specifications</h6>
                <table class="table">
                    <thead>
                    <tr>
                       <th scope="col">Specification</th><th scope="col">Value</th>
                    </tr>
  </thead>
  <tbody>
                    <% product.specifications.forEach(spec => { %>
                        <tr>
                            <td><%= spec.key %> </td><td><%= spec.value %></td>
                         </tr>
                    <% }) %>
                </tbody>
                 </table>
            </div>
          
        </section>
<section>
    <div class="container" style="max-width: 900px;">
        <h6 style="font-weight: bolder; font-style: oblique; text-decoration: underline;">Packaging</h6>
        <%= product.packing %> 
    </div>
</section>
<section>
    <div class="container" style="max-width: 900px;">
        <h6 style="font-weight: bolder; font-style: oblique; text-decoration: underline;">Applications</h6>
        <ol>
            <% product.applications.forEach(appl => { %>
             <li><%= appl %> </li>
            <% }) %>
        </ol>
        <p style="font-weight: 100; font-size: smaller; font-style: italic;">* <%= product.note %> </p>
    </div>
</section>
<section>
    <div class="container" style="max-width: 900px;">
        <div class="row justify-content-center">
            <button type="button" class="btn btn-theme" style="margin-right: 50px;">Download Brochure</button><button type="button" class="btn btn-theme">Enquiry</button>
        </div>
        
    </div>
</section>
    </main>
    <%- include('footer'); -%>
    <a href="#" class="back-to-top"><i class="ri-arrow-up-line"></i></a>
    <!-- <div id="preloader"></div> -->

    <!-- Vendor JS Files -->
    <script src="assets/vendor/jquery/jquery.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/jquery.easing/jquery.easing.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="assets/vendor/venobox/venobox.min.js"></script>
    <script src="assets/vendor/owl.carousel/owl.carousel.min.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

</body>

</html>