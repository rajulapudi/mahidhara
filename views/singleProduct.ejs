            <h6 style="font-weight: bolder; font-style: oblique; text-decoration: underline;">Applications
            </h6>
            <ol>
              <% product.applications.forEach(appl=> { %>
                <li>
                  <%= appl %>
                </li>
                <% }) %>
            </ol>
            <p style="font-weight: 100; font-size: smaller; font-style: italic;">* <%= product.note %>
            </p>
            <p>
              <%= product.manufacturer %>
            </p>
          </div>
        </section>
        <section>
          <div class="container" style="max-width: 900px;">
            <div class="row justify-content-center">
              <a href="<%= product.downloadLink %>" download="<%= product.displayName %>.pdf"><button type="button"
                  class="btn btn-theme" style="margin-right: 50px;">Download
                  Brochure</button></a><button type="button" class="btn btn-theme">Enquiry</button>
            </div>
          </div>
