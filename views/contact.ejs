<section id="contact" class="contact">
    <div class="container">

      <div class="section-title" data-aos="zoom-out">
        <h2>Contact</h2>
        <p>Contact Us</p>
      </div>

      <div class="row mt-5">

        <div class="col-lg-4" data-aos="fade-right">
          <div class="info">
            <div class="address">
              <i class="icofont-google-map"></i>
              <h4>Location:</h4>
              <p>G-3 & G-4, Sai Peethambaram Residency, <br>
                East Marredpally,
                Secunderabad, <br>
                Telangana, INDIA - 500 026</p>
            </div>

            <div class="email">
              <a href="mailto:info.mahidhara@gmail.com">
              <i class="icofont-envelope"></i>
              <h4>Email:</h4>
              <p>info.mahidhara@gmail.com</p>
            </a>
            </div>

            <div class="phone">
              <a href="tel:+91 8455240445,+91 8455285904">
              <i class="icofont-phone"></i>
              <h4>Call:</h4>
              <p> +91 8455 240445, +91 8455 285904</p>
            </a>
            </div>

          </div>

        </div>

        <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">

          <!-- action="https://content.techpranee.com/api/leads-mahidharas" -->

          <form  novalidate id="contactForm" method="post" role="form"  class="php-email-form">
            
            <div class="form-row">

              <div class="col-md-6 form-group">
                <input type="text" name="name" class="form-control" id="contactName" placeholder="Your Name" value="" required/>
                <div class="validate"></div>
              </div>

              <div class="col-md-6 form-group">
                <input type="email" class="form-control" value="" name="email" id="contactEmail" placeholder="Your Email" required/>
                <div class="validate"></div>
              </div>

            </div>

            <div class="form-row">

              <div class="col-md-6 form-group">
                <select id="productDropdown" class="form-control" required>
                  <option disabled selected>Products</option>                  
                  <% products.forEach(prod => { %>
                    <option value="<%- prod.displayUrl %>"><%- prod.displayName %></option>
                  <% }) %>
                </select>
                <div class="validate"></div>

                <!-- <input type="text" name="compound name"  id="name" placeholder="Coumpound Name" data-rule="minlen:4" data-msg="Please enter valid Compound name" />
                 -->
              </div>

              <div>

                <input type="hidden"  name="phone" value="null" id="contactPhone"/>

                <input type="hidden"  name="msg" id="contactMsg" value="Submitting Contact Details" />
      
              </div>

              <div class="col-md-6 form-group">
                <input type="number" class="form-control" name="qty" id="contactQuantity" value="" placeholder="Quantity (Kg)" data-rule="number" data-msg="Please enter a valid quantity" min="0" step="0.100"
                required/>
                <div class="validate"></div>
              </div>

            </div>

            <div class="form-group">
              <textarea class="form-control" name="address" rows="5" data-rule="required" id="contactAddress" data-msg="Please write something for us" placeholder="Address"></textarea>
              <div class="validate"></div>
            </div>

            <div class="mb-3">
              <div class="loading">Loading</div>
              <!-- <div class="error-message"></div> -->
              <div class="sent-message">Your message has been sent. Thank you!</div>
            </div>
            <div class="text-center"><button type="submit">Send Message</button></div>
          </form>

        </div>

      </div>

    </div>
  </section>
